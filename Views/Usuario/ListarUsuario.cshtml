@model IEnumerable<we.app_nksystemcore.Models.Usuario>

@{
    ViewData["Title"] = "Listado de Usuarios";
    ViewData["Accion"] = "Acciones de los usuarios";
}
@section Scripts {
    <script src="~/js/funcionesusuario.js"></script>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-filled">
            <div class="panel-heading">
            </div>
            <div class="panel-body">
                <p>
                    @Html.ActionLink("Crear Usuario", "CrearUsuario")
                </p>
                <table id="tableExample3" class="table table-striped table-hover table-responsive-sm">
                    <thead>
                        <tr>
                            <th>
                                Usuario
                            </th>

                            <th>
                                Nombre
                            </th>
                            <th>
                                Descripcion
                            </th>

                            <th>
                                Email
                            </th>
                            <th>
                                Rol
                            </th>

                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.login)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombrecompleto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descripcion)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.direccioncorreo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.rolid)
                                </td>

                                <td>
                                    <a href="@Url.Action("MostrarUsuario","Usuario", new { RutaId = item.login})"><i class="fa fa-folder"></i></a>
                                    <a href="@Url.Action("EditarUsuario","Usuario", new { RutaId = item.login})"><i class="fa fa-edit"></i></a>
                                    <a href="#"><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <hr />
            </div>
        </div>
    </div>
</div>
