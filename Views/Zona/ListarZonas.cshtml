@model IEnumerable<we.app_nksystemcore.Models.Zona>

@{
    ViewData["Title"] = "Listado de Zonas";
    ViewData["Accion"] = "Acciones de las Zona";
}
@section Scripts {
    <script src="~/js/funcioneszona.js"></script>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-filled">
            <div class="panel-heading">
            </div>
            <div class="panel-body">
                <p>
                    @Html.ActionLink("Crear Zona", "CrearZona")
                </p>

                <table id="tableExample3" class="table table-striped table-hover table-responsive-sm">
                    <thead>
                        <tr>
                            <th>
                                Codigo
                            </th>
                            <th>
                                Nombre
                            </th>

                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.codzona)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nomzona)
                                </td>
                                <td>
                                    <a href="@Url.Action("MostrarZona","Zona", new { ZonaId = item.codzona})"><i class="fa fa-folder"></i></a>
                                    <a href="#"><i class="fa fa-edit"></i></a>
                                    <a href="#"><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <hr />
            </div>
        </div>
    </div>
</div>
